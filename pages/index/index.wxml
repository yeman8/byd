<view>
<swiper
  indicator-dots='{{true}}'
  indicator-active-color='#ff0000'
  indicator-color='#ffffff'
>
  <block wx:for="{{slides}}" wx:key="id">
    <swiper-item>
      <image src='{{item.images}}' mode='aspectfill'></image>
      <view class='content'>
        <view class='sub-header'>{{item.sub-header}}<text>22</text></view>
        <view class='header'>{{item.header}}</view>
        <view class='discript'>{{item.discript}}</view>
        <view class='act'>
          <button class='button'>试驾预约</button>
          <button class='button primary'>了解更多...</button>
        </view>
      </view>

    </swiper-item>
  
  </block>


</swiper>
</view>